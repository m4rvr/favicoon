{
  "compilerOptions": {
    "target": "esnext",
    "module": "node16",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
